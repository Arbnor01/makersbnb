<html>
  <head>
      <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <h1>Here is a list of pending approvals</h1>
      <div>
        <ul>
        <form method="post" action="/bookings/approve">
        <% @bookings.each do |booking| %>
        <li>
        <%= booking.property_name %> on <%= Date.parse(booking.date).strftime('%e %b %Y') %>  <button name="booking_id" value="<%= booking.id %>">Approve</button>
        </li>
        <% end %>
        </form>
        </ul>
        
      </div> 
  </body>
</html>
